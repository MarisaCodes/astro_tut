---
const { title, body, dark = false } = Astro.props;
---

<style>
  /* Cards */

  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }
  .dark {
    background-color: var(--color-primary);
    color: #fff;
  }
</style>

<div class={`card ${dark && "dark"}`}>
  <slot />
</div>
